rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - allow registration and login
    match /users/{userId} {
      // Allow anyone to create users (for registration)
      allow create: if true;
      // Allow authenticated users to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow reading own data for login (temporary - should be removed in production)
      allow read: if true;
    }

    // Job Postings collection - for job listings in job-seeking app
    match /jobPostings/{jobPostingId} {
      // Allow anyone to read job postings (for browsing by job seekers)
      allow read: if true;
      // Allow anyone to create job postings during development/seeding
      // TODO: Change to authenticated users only in production
      allow create: if true;
      // Allow users to modify/delete only their own job postings
      // Note: This assumes job postings will have a posterId field
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.posterId;
    }

    // Test collection - temporary for testing
    match /test/{testId} {
      allow read, write: if true;
    }
  }
}